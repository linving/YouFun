<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bottom_bar_bg_color">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_color"/>
    <RadioGroup
        android:id="@+id/host_radio_group"
        android:checkedButton="@+id/host_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/host_bus"
            style="@style/host_radio"
            android:drawableTop="@drawable/ic_local_restaurant_grey600_36dp"
            android:text="商家" />
        <RadioButton
            android:id="@+id/profile"
            style="@style/host_radio"
            android:drawableTop="@drawable/ic_person_grey600_36dp"
            android:text="我" />
    </RadioGroup>

</LinearLayout>